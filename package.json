{
  "name": "wordpress-salts",
  "displayName": "WordPress Salts",
  "description": "Context-aware WordPress salts generation for PHP, YAML, DotEnv and JSON files without the need of an internet-connection",
  "version": "1.3.0",
  "publisher": "idleberg",
  "license": "MIT",
  "author": {
    "name": "Jan T. Sott",
    "url": "http://github.com/idleberg"
  },
  "main": "./lib/extension",
  "scripts": {
    "compile": "npm run build",
    "build:assets": "gulp",
    "build:code": "node ./tools/build.cjs",
    "build": "npm-run-all --parallel build:*",
    "dev": "npm run start",
    "lint:json": "eslint --ext .json --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint:yaml": "eslint --ext .yaml --ext .yml --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepare": "husky install",
    "start": "cross-env ESBUILD_WATCH=true node ./tools/build.cjs",
    "test": "npm run lint",
    "vscode:prepublish": "npm run build"
  },
  "keywords": [
    "wordpress",
    "wordpress salts",
    "cryptography"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/vscode-wordpress-salts"
  },
  "homepage": "https://github.com/idleberg/vscode-wordpress-salts#readme",
  "bugs": {
    "url": "https://github.com/idleberg/vscode-wordpress-salts/issues"
  },
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#21759b",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dotenv",
    "onLanguage:json",
    "onLanguage:php",
    "onLanguage:yaml"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "WordPress Salts",
      "properties": {
        "wordpress-salts.saltLength": {
          "type": "number",
          "default": 64,
          "minimum": 64,
          "maximum": 4096,
          "description": "Default length of salts, between 64 and 4096 characters"
        },
        "wordpress-salts.jsonIndentation": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "description": "Default indentation of JSON strings"
        },
        "wordpress-salts.alignPHP": {
          "type": "boolean",
          "default": true,
          "description": "Align definitions for better visual grepping"
        }
      }
    },
    "commands": [
      {
        "command": "extension.wordpress-salts.insert",
        "title": "WordPress Salts: Insert"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+w",
        "when": "editorFocus",
        "command": "extension.wordpress-salts.insert"
      }
    ]
  },
  "dependencies": {
    "vscode-get-config": "^0.4.0",
    "vscode-insert-text": "^1.1.0",
    "wp-salts": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.17",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.11",
    "eslint": "^8.5.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-yaml": "^0.5.0",
    "gulp": "^4.0.2",
    "gulp-raster": "^0.2.0",
    "gulp-rename": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all2": "^6.0.5",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.(ts|json|yml)": "eslint --cache --fix"
  }
}
