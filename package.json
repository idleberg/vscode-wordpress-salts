{
  "name": "wordpress-salts",
  "displayName": "WordPress Salts",
  "description": "Context-aware WordPress salt key insertion for PHP, YAML and DotEnv files without the need of an internet-connection",
  "version": "0.2.0",
  "publisher": "idleberg",
  "license": "MIT",
  "author": {
    "name": "Jan T. Sott",
    "url": "http://github.com/idleberg"
  },
  "main": "./lib/extension",
  "scripts": {
    "compile": "webpack --mode none",
    "dev": "webpack --mode none --watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "tslint --project .",
    "vscode:prepublish": "npm run compile && gulp"
  },
  "keywords": [
    "wordpress",
    "wordpress salts",
    "cryptography"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/vscode-wordpress-salts"
  },
  "homepage": "https://github.com/idleberg/vscode-wordpress-salts#readme",
  "bugs": {
    "url": "https://github.com/idleberg/vscode-wordpress-salts/issues"
  },
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#21759b",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:env",
    "onLanguage:json",
    "onLanguage:php",
    "onLanguage:yaml"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "WordPress Salts",
      "properties": {
        "wordpress-salts.saltLength": {
          "type": "number",
          "default": 64,
          "minimum": 64,
          "maximum": 4096,
          "description": "Default length of salts, between 64 and 4096 characters"
        },
        "wordpress-salts.jsonIndentation": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "description": "Default indentation of JSON strings"
        },
        "wordpress-salts.alignPHP": {
          "type": "boolean",
          "default": true,
          "description": "Align definitions for better visual grepping"
        }
      }
    },
    "commands": [
      {
        "command": "extension.wordpress-salts.insert",
        "title": "WordPress Salts: Insert"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+w",
        "when": "editorFocus",
        "command": "extension.wordpress-salts.insert"
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "dependencies": {
    "vscode-insert-text": "^0.2.0",
    "wp-salts": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^12.0.8",
    "gulp": "^4.0.2",
    "gulp-raster": "^0.2.0",
    "gulp-rename": "^1.4.0",
    "husky": "^3.0.0",
    "ts-loader": "^6.0.2",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1",
    "vscode": "^1.1.34",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.4"
  }
}
